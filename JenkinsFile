def artifactname = "JenkinsDevOpsProject-0.0.1-SNAPSHOT.jar"
def repoName = "JenkinsDevOpsProject"
def pipelineName = "SunilDevOps-Pipeline"
def semanticVersion = "${env.BUILD_NUMBER}.0.0"
def packageName = "JenkinsDevOpsProject-package_${env.BUILD_NUMBER}"
def version = "${env.BUILD_NUMBER}.0"
def pkgName = "JenkinsDevOpsProject-package"

pipeline {
  agent any
  tools {
       maven 'Maven'
   }
  stages {
       stage('Build') {
           steps {
              
              sh 'mvn -B -DskipTests clean compile'

           }
       }
       stage('Test') {
           steps {
              
              sh 'mvn test'
           }
           post {
             always {
                junit "**/target/surefire-reports/*.xml"
             }
           }
       }
 }
 
}
